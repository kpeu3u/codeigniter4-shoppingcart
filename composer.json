{
    "name": "agungsugiarto/codeigniter4-shoppingcart",
    "description": "CodeIgniter4 shopping cart.",
    "keywords": ["codeigniter4", "shopping cart", "cart"],
    "license": "MIT",
    "authors": [
        {
            "name": "agungsugiarto",
            "email": "me.agungsugiarto@tgmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "codeigniter4/framework": "^4.5.5",
        "illuminate/collections": "^11.36"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.6",
        "codeigniter4/devkit": "^1.2",
        "mockery/mockery": "^1.6",
        "rector/rector": "^1.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "ShoppingCart\\": "src"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests",
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "post-update-cmd": [
            "bash bin/setup.sh"
        ],
        "analyze": [
            "phpstan analyze",
            "psalm",
            "rector process --dry-run"
        ],
        "sa": "@analyze",
        "ci": [
            "Composer\\Config::disableProcessTimeout",
            "@cs",
            "@deduplicate",
            "@inspect",
            "@analyze",
            "@test"
        ],
        "cs": "php-cs-fixer fix --ansi --verbose --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff",
        "deduplicate": "phpcpd app/ src/ --exclude src/Database/Migrations/2020-12-28-223112_create_auth_tables.php",
        "inspect": "deptrac analyze --cache-file=build/deptrac.cache",
        "mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
        "style": "@cs-fix",
        "test": "phpunit --testdox --colors=always -vvv"
    }
}
