{
    "name": "agungsugiarto/codeigniter4-shoppingcart",
    "description": "CodeIgniter4 shopping cart.",
    "keywords": ["codeigniter4", "shopping cart", "cart"],
    "license": "MIT",
    "authors": [
        {
            "name": "agungsugiarto",
            "email": "me.agungsugiarto@tgmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "codeigniter4/framework": "^4.3",
        "tightenco/collect": "^v8.0",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "ShoppingCart\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always -vvv"
    }
}
